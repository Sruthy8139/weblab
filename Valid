	<script>
		function validateForm() {
			var name = document.form.name.value;
            		var ren = /[0-9!@#$%^&*]/;
			var pass = document.form.pass.value;
			var re = /^(?=.*\d)(?=.*[!@#$%^&*])(?=.*[a-z])(?=.*[A-Z]).{8,}$/;
			var re_pass = document.form.re_pass.value;


			if (name == "") {
                	alert("Enter First Name !!");
                	document.form.name.focus();
                	return false;
            		} 
			else if (ren.test(name)) {
                	alert("Enter Valid Name !!");
                	document.form.name.focus();
                	return false;
            		}

			if (pass == "" || pass.length < 8 || !re.test(pass)) {
                	alert("Enter minimum 8 digit Password !!" + '\n' + "At least one Lowercase, Uppercase, Digit, & Special Character must be included");
                	document.form.pass.focus();
                	return false;


			if (re_pass == "" || re_pass.length < 8 || !re.test(re_pass)) {
                        alert("Enter minimum 8 digit Password !!" + '\n' + "At least one Lowercase, Uppercase, Digit, & Special Character must be included");
                        document.form.re_pass.focus();
                        return false;


		}
		}
		}
		
		

	</script>
